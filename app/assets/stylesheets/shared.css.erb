body {
  font-size: 13px;
  color: #444;
  position: relative;
  margin: 0;
  padding: 0;
}

body, p, ol, ul, td {
  font-family: 'Open Sans', sans-serif;
}

h1, h2, h3 {
  font-weight: normal;
}

ol, ul {
  padding: 0;
  margin: 0;
}

a, a:visited {
  color: #333;
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

table {
  margin-bottom: 20px;
  width: 100%;
  border-top: 1px solid #ccc;
  border-spacing: 0;
}

table tr.even {
  background: #f6f6f6;
}
table tr.odd {}

table td,
table th {
  padding: 5px 10px;
  border-bottom: 1px solid #ccc;
}

table th {
  font-weight: normal;
  background: #DDD;
  text-align: left;
}

table td.number,
table th.number,
table td.time,
table th.time {
  text-align: right;
}

input[type=text], select {
  font-family: 'Open Sans', sans-serif;
  margin: 0;
  padding: 3px;
  border: 1px solid #dcdcdc;
  font-size: 20px;
}

input[type=submit] {
  font-family: 'Open Sans', sans-serif;
  font-size: 13px;
  margin: 0;
}

footer {
  margin-top: 100px;
}

footer p.right {
  text-align: right;
}

.right {
  float: right;
}

.left {
  float: left;
}

.block {
  overflow: hidden;
}

.notice {
  color: #090;
}

.alert {
  color: #f00;
}

.button {
  background-color: #ededed;
  border: 1px solid #dcdcdc;
  display: inline-block;
  color: #777;
  padding: 6px 24px;
  text-decoration: none;
  text-shadow: 1px 1px 0px #ffffff;
}

.button:hover {
  background-color: #e6e6e6;
}

.button:active {
  position: relative;
  top: 1px;
}

.button.big {
  font-size: 15px;
  font-weight: bold;
}

a.button:hover {
  text-decoration: none;
}

a.button:visited {
  color: #777;
}

.loading {}

.pagination {
  text-align: right;
}

#flash {
  text-align: center;
}

#announcement {
  margin-top: 20px;
}

#announcement .title {
  font-weight: bold;
}

#logo h1 {
  font-size: 28px;
  font-family: 'Leckerli One', cursive;
  margin: 0;
}

#logo.start h1 {
  font-size: 158px;
  margin-bottom: -45px;
  text-align: center;
}

#logo h1 a:hover {
  text-decoration: none;
}

#logo h2 {
  font-size: 9px;
  margin-top: 0;
  margin-left: 58px;
}

#logo.start h2 {
  font-size: 20px;
  margin-left: 476px;
  margin-bottom: 0;
}

#logo.start #sponsors {
  margin-left: 612px;
}

#logo.auth .text {
  margin-right: 20px;
}

#logo #sponsors p {
  margin: 0;
  margin-top: 6px;
  margin-right: 7px;
}

#logo #sponsors a#mongohq {
  display: block;
  text-indent: -9000px;
  background-image: url(<%= asset_path "sponsors/mongohq_small.png" %>);
  width: 100px;
  height: 28px;
}

.container {
  margin: 0 auto;
  width: 960px;
}

#content {
  padding-bottom: 20px;
}

#header_container {
  background-color: #ededed;
  border-bottom: 1px solid #dcdcdc;
  color: #777;
  text-decoration: none;
  text-shadow: 1px 1px 0px #fff;
  margin-bottom: 50px;
}

#header_container #user_container {
  margin-top: 3px;
}