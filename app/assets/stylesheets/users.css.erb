.user {
  width: 200px;
}

.profile_image {
  position: relative;
  width: 24px;
  height: 24px;
  margin-right: 5px;
  margin-top: 4px;
}

.profile_image .overlay {
  background-image: url(<%= asset_path "rounded-avatar-24.png" %>);
  position: absolute;
  top: 0;
  width: 24px;
  height: 24px;
}

.profile_image.size48 {
  width: 48px;
  height: 48px;
  margin-right: 10px;
}

.profile_image.size48 .overlay {
  background-image: url(<%= asset_path "rounded-avatar-48.png" %>);
  width: 48px;
  height: 48px;
}

.profile, .authorization {
  margin-right: 20px;
  width: 300px;
}